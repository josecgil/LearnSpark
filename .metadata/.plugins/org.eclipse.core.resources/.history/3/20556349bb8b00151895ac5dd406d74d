package models;


import java.util.Calendar;
import java.util.Date;

import org.joda.time.DateTime;
import org.junit.Assert;
import org.junit.Test;

import models.Job;

public class TestJob {

	@Test
	public void itMustBeNewIfIsFromToday() {
		Job job=new Job();
		job.setDateTime(new DateTime());
		Assert.assertTrue(job.isNew());
	}

	@Test
	public void itMustBeNewIfIsFromAMonthAgo() {
		Job job=new Job();
		job.setDateTime(new DateTime().minusDays(30));
		Assert.assertTrue(job.isNew());
	}

	@Test
	public void itMustBeNewIfIsFromMoreThanAMonthAgo() {
		Job job=new Job();
		job.setDateTime(new DateTime().minusDays(31));
		Assert.assertFalse(job.isNew());
	}

	@Test
	public void itMustBeNewIfIsFromMoreThanAMonth() {
		Job job=new Job();
		job.setDateTime(new DateTime().minusDays(60));
		Assert.assertFalse(job.isNew());
	}

	
}
