package infrastructure;

import models.Job;
import models.JobCollection;

public class JobRepository {

	private static JobCollection jobs=RandomJobCreator.create(20);
	
	public JobCollection findAll() {
		jobs.Sort();
		return jobs;
	}

	public String[] findAllCategories() {
		return new String[] {
				Job.CATEGORY_PROGRAMMING,
				Job.CATEGORY_DESIGN,
				Job.CATEGORY_EXECUTIVE,
				Job.CATEGORY_OTHER};
	}

}
