package models;

import java.text.DateFormatSymbols;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

public class Job {
	private static int _lastId=0;
	
	public Job() {
		_lastId++;
		id=_lastId;
		date=new Date();
	}
	
	private int id;
	private String title;
	private Date date;
	private String company;
	private String location;
	private String description;
	
	private String category;
	
	public int getId() {
		return id;
	}
	
	public String getTitle() {
		return title;
	}
	
	public void setTitle(String title) {
		this.title = title;
	}
	
	public Date getDate() {
		return date;
	}
	
	public boolean isNew() {
		Calendar calendar = Calendar.getInstance();
		calendar.setTime(new Date()); 
		calendar.add(Calendar.DATE, -15);
		Date dateFrom30DaysAgo=calendar.getTime();
		return dateFrom30DaysAgo.before(date);
	}
	
	private String firstLetterToUpperCase(String str) {
		return str.substring(0,1).toUpperCase()+str.substring(1);
	}
	
	public String getHumanDate() {
		SimpleDateFormat simpleDateFormat=new SimpleDateFormat("MMM dd");
		String dateAsString=simpleDateFormat.format(this.date);
		return firstLetterToUpperCase(dateAsString);
	}
	
	public void setDate(Date date) {
		this.date = date;
	}

	public String getCompany() {
		return company;
	}
	
	public void setCompany(String company) {
		this.company = company;
	}
	
	public String getLocation() {
		return location;
	}
	
	public void setLocation(String location) {
		this.location = location;
	}
	
	public String getDescription() {
		return description;
	}
	
	public void setDescription(String description) {
		this.description = description;
	}
	
	public String getCategory() {
		return category;
	}
	
	public void setCategory(String category) {
		this.category = category;
	}

}
