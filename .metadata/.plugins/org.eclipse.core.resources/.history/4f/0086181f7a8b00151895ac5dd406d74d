package models;


import java.util.Calendar;
import java.util.Date;

import org.joda.time.DateTime;
import org.junit.Assert;
import org.junit.Test;

import models.Job;

public class TestJob {

	@Test
	public void itMustBeNewIfIsFromToday() {
		Job job=new Job();
		job.setDate(new DateTime());
		Assert.assertTrue(job.isNew());
	}

	@Test
	public void itMustBeNewIfIsFrom15DaysAgo() {
		Job job=new Job();
		job.setDate(new DateTime().minusDays(15));
		Assert.assertTrue(job.isNew());
	}

	@Test
	public void itMustBeNewIfIsFromMoreThan15DaysAgo() {
		Job job=new Job();
		job.setDate(new DateTime().minusDays(16));
		Assert.assertTrue(job.isNew());
	}
	
}
