package controllers;

import java.util.HashMap;

import spark.ModelAndView;
import spark.template.freemarker.FreeMarkerEngine;

public class Controller {

	public Controller(FreeMarkerEngine freeMarkerEngine, String pathToView) {
		this.setFreeMarkerEngine(freeMarkerEngine);
		this.pathToView=pathToView;
	}

	private FreeMarkerEngine freeMarkerEngine;
	private String pathToView;

	protected ModelAndView renderView(String viewName, String modelName, Object model) {
		HashMap<String, Object> root=new HashMap<String, Object>(); 
		root.put(modelName, model);
		return new ModelAndView(root, this.pathToView+viewName);
	}

	public FreeMarkerEngine getFreeMarkerEngine() {
		return freeMarkerEngine;
	}

	public void setFreeMarkerEngine(FreeMarkerEngine freeMarkerEngine) {
		this.freeMarkerEngine = freeMarkerEngine;
	}


}